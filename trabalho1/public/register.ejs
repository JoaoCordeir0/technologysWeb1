<html lang="en">

<head>
    <%- include('partials/head'); %>
        <title>Register</title>
</head>

<body>

    <div class="container">
        <div class="row d-flex justify-content-center mt-5">
            <div class="col-sm-4 bodyLogin">
                <div class="text-center d-flex justify-content-center">
                    <div class="imgLogin">
                        <i class="bi bi-laptop"></i>
                    </div>
                </div>
                <div class="text-center mb-4">
                    <h4>Registro</h4>
                </div>
                <form method="POST">
                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-12 col-form-label">Nome</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" name="inputName" id="inputName">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-12 col-form-label">Email</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" name="inputEmail" id="inputEmail">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-12 col-form-label">Senha</label>
                        <div class="col-sm-12">
                            <input type="password" class="form-control" name="inputPassword1" id="inputPassword1">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-12 col-form-label">Confirme a senha</label>
                        <div class="col-sm-12">
                            <input type="password" class="form-control" name="inputPassword2" id="inputPassword2">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <button type="button" id="submitRegister" class="btn btn-primary">Registrar</button>
                    </div>
                    <div class="mb-3 row mt-4 mb-0">
                        <a href="./Login" class="text-center">Já possui conta? <i>Faça login</i></a>
                    </div>
                </form>
                <div class="rodape text-center mt-5">
                    <p>UNIFAE - ENGENHARIA DE SOFTWARE</p>
                </div>
            </div>
        </div>
    </div>

    <script src="js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>

</html>