<html lang="en">

<head>
    <%- include('partials/head'); %>
        <title>Login</title>
</head>

<body>

    <div class="container">
        <div class="row d-flex justify-content-center mt-5">
            <div class="col-sm-4 bodyLogin">
                <div class="text-center d-flex justify-content-center">
                    <div class="imgLogin">
                        <i class="bi bi-laptop mt-3"></i>
                    </div>
                </div>
                <div class="text-center mb-4">
                    <h4>Autenticação</h4>
                </div>
                <form action="" method="post">
                    <div class="mb-3 row">
                        <label for="inputEmail" class="col-sm-12 col-form-label">Email</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" name="inputEmail" id="inputEmail">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-12 col-form-label">Password</label>
                        <div class="col-sm-12">
                            <input type="password" class="form-control" name="inputPassword" id="inputPassword">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <div class="form-check d-flex justify-content-end">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label mr-4" for="flexCheckDefault">&nbsp;Relembre-me</label>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <button type="button" class="btn btn-primary" id="submitLogin">Entrar</button>
                    </div>
                    <div class="mb-3 row mt-4 mb-0">
                        <a href="./Register" class="text-center">É novo por aqui? <i>Cadastre-se</i></a>
                    </div>
                </form>
                <div class="rodape text-center mt-5">
                    <p>UNIFAE - ENGENHARIA DE SOFTWARE</p>
                </div>
            </div>
        </div>
    </div>

    <script src="js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>

</html>